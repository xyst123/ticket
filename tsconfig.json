{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "jsx": "react",
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types", "client"],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "client/*"
      ]
    }
  },
  "include": ["client/**/*.ts", "client/**/*.tsx"],
  "exclude": ["node_modules/**"]
}